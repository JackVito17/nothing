  <!-- Efek hujan nama Eby -->
  <script>
    function showLove() {
      document.getElementById('output').innerHTML = "Jack: I LOVE YOU, Eby ‚ù§Ô∏è";

      // Efek hati tambahan saat klik
      for (let i = 0; i < 10; i++) {
        const heart = document.createElement("div");
        heart.innerHTML = "‚ù§Ô∏è";
        heart.style.position = "absolute";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.top = Math.random() * 100 + "vh";
        heart.style.fontSize = "24px";
        heart.style.opacity = "0.9";
        heart.style.animation = "float 4s ease-in-out";
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 4000);
      }
    }

    // Efek hujan teks "Eby"
    function createRain() {
      const rain = document.createElement("div");
      rain.className = "rain";
      rain.innerText = "Eby";
      rain.style.left = Math.random() * 100 + "vw";
      rain.style.fontSize = (Math.random() * 10 + 15) + "px";
      document.body.appendChild(rain);
      setTimeout(() => rain.remove(), 4000);
    }

    setInterval(createRain, 150);
  </script>

